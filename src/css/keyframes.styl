@keyframes slot-selected
  0%
    outline-color: #3695
    outline-offset: -5px
  100%
    outline-color: #3697
    outline-offset: -7px

@keyframes slot-exploding
  0%, 100%
    box-shadow: inset 0 0 0 #fff3, 0 0 0 #fff3
  15%, 25%
    box-shadow: inset 0 0 100px #fff3, 0 0 50px #fff3

@keyframes jewel-exploding
  0%
    opacity: 1
    transform: scale(1) translateY(0)
  100%
    opacity: 0
    transform: scale(1.5) translateY(5%)

@keyframes jewel-brightening
  0%
    filter: brightness(1)
  100%
    filter: brightness(1.1)

@keyframes star-blinking
  0%
    transform: translateX(-50%)
    filter: brightness(1) drop-shadow(0 0 .5px #fffa)
  100%
    transform: translateX(-50%) scale(.8)
    filter: brightness(1.075) drop-shadow(0 0 1px #fffa)
