html, body
  margin: 0
  padding: 0
  height: 100vh
  display: flex
  justify-content: center
  align-items: center
  background-image: linear-gradient(-45deg, #d5d4d0 0%, #d5d4d0 1%, #eeeeec 31%, #efeeec 75%, #e9e9e7 100%)
  background-size: 400% 400%
  animation: background-animation 15s ease infinite

#board
  box-sizing: border-box
  width: calc(100vmin - 2rem)
  height: calc(100vmin - 2rem)
  display: grid

.row
  display: grid
  &:first-child .column
    border-top: 1px solid #2222
    display: grid
    &:first-child
      border-radius: 6px 0 0 0
    &:last-child
      border-radius: 0 6px 0 0
  &:last-child .column
    border-bottom: 1px solid #2222
    display: grid
    &:first-child
      border-radius: 0 0 0 6px
    &:last-child
      border-radius: 0 0 6px 0

.column
  box-sizing: border-box
  background: #2221
  &:first-child
    border-left: 1px solid #2222
  &:last-child
    border-right: 1px solid #2222

@keyframes background-animation
  0% { background-position: 0% 50% }
  50% { background-position: 100% 50% }
  100% { background-position: 0% 50% }
